"resource/layout/musicpage_details_playlist.layout"
{
	controls
	{
		PlaylistTitleLabel { controlname="Label" style="PlaylistTitleStyle" }
		PlaylistLabel { controlname="Label" style="PlaylistLabelStyle" }
		CoverImage { controlname="ImagePanel" style="CoverStyle" scaling=fit}
		
		PlayPlaylistButton { 
			controlname="Button" 
			labeltext="#Music_Playlist_Details_Play" 
			style="ActionButtonStyle"
			command="PlaylistPlayAction"
		}
		
		PlayPlaylistNextButton
		{
			controlname="Button" 
			labelText="#Music_Playlist_Details_PlayNext" 
			style="AdditionalActionButtonStyle"
			command="PlaylistPlayNextAction"
		}
		
		AddPlaylistToQueueButton
		{
			controlname="Button" 
			labelText="#Music_Playlist_Details_AddToQueue" 
			style="AdditionalActionButtonStyle"
			command="PlaylistAddToQueueAction"
		}	

		AddRandomTracksToPlaylistButton
		{
			controlname="Button" 
			labelText="#Music_Playlist_Details_AddRandomTrack" 
			style="AdditionalActionButtonStyle"
			command="PlaylistAddRandomTracksAction"
		}	
		
	}

	styles
	{
		CMusicPage_Details_Playlist
		{
			bgcolor=none

		}
		
		PlaylistTitleStyle
		{
			padding-bottom=8
			padding-top=8
			padding-left=10
			padding-right=10
			font-size=12
			textcolor=Text
			font-family=basefont
			font-weight=normal 
			bgcolor=BackgroundStart
		}

		PlaylistLabelStyle
		{
			padding-bottom=10
			padding-top=10
			padding-left=10
			padding-right=10
			font-size=12
			textcolor=Text
			font-family=basefont
			font-weight=normal
			bgcolor=none
		}
		
		TrackStyle
		{
			padding-bottom=10
			padding-top=0
			font-size=12
			textcolor=Text2
			font-family=basefont
			font-weight=normal 
			bgcolor=none
		}
		
		TrackStyle:hover
		{
			textcolor="text"
		}
		
		CoverStyle
		{

		}
		
		AdditionalActionButtonStyle
		{
			font-size=12
			font-size=12 [$OSX]
			font-family=basefont
			textcolor="label"
			padding-right=0
			padding-left=-6
			padding-top=4
			padding-bottom=-4
			render_bg	{}
		}
		
		AdditionalActionButtonStyle:hover
		{
			textcolor="labelfocus"
		}
		
		
		ActionButtonStyle
		{   
			inset="23 0 0 0"

			font-family=basefont
			font-size=12
			font-weight=normal
			textcolor="Text"
			font-style=uppercase
			bgcolor=none

			render
			{
				1="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_play )"
			}
			render_bg
				{
				// background fill
				//0="gradient( x0, y0, x1, y1, buttonface2, dialogbg )"
				}	
			}
			
			ActionButtonStyle:hover
			{
				textcolor="TextHover"
				render
				{
					0="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_play_hover )"			
				}		
				render_bg
				{
				// background fill
					// 0="gradient( x0, y0, x1, y1, buttonfaceactive, propertysheetbg )"  
				}	
				           	
			}
			
			ActionButtonStyle:active
			{
				textcolor="TextHover"
				render
				{
					0="image( x0 + 6, y0 + 3, x1, y1, graphics/icon_play_hover )"			
				}		
				render_bg
				{
				// background fill
					// 0="gradient( x0, y0, x1, y1, dialogbg, propertysheetbg )"  
				}	
				           	
			}
}
	layout
	{
		region { name=bodyregion x=10 y=10 width=max height=max overflow=scroll-vertical }		
		region { name=headerregion x=10 y=20 width=max height=max overflow=scroll-vertical }
		region { name=leftcolumn x=20 width=200 overflow=scroll-vertical }
		region { name=trackcolumn width=max overflow=scroll-vertical }
		
		place { control="CoverImage" align=top width=200 height=200 }
		
		place { region=headerregion control=PlaylistTitleLabel,PlaylistLabel,leftcolumn dir=down }
		place { region=leftcolumn  dir=down start=PlaylistLabel spacing=10
			control=CoverImage,PlayPlaylistButton }
		place { region=leftcolumn	dir=down start=PlayPlaylistButton 
			control=PlayPlaylistNextButton,AddPlaylistToQueueButton,AddRandomTracksToPlaylistButton}
		place { region=trackcolumn control=*MusicPageDetailsPlaylistTrack dir=down start=PlaylistLabel x=230 width=max }
	}
}
